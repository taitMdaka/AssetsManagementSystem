@model IEnumerable<AssetsManagementSystem.BusinessLayer.DTO.AssetsDTO>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>GetAssets</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AssetName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AssetDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AssetSerialNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AssetTypeID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Brand)
